# ========== BASE DE DATOS ==========
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=mqerkacademy

# ========== SERVIDOR ==========
PORT=1002
HOST=0.0.0.0
NODE_ENV=development
PROTOCOL=http
CLIENT_BASE_URL=http://localhost:5173

# ========== JWT Y AUTENTICACION ==========
JWT_SECRET=tu_clave_secreta_jwt_muy_larga_y_segura_aqui
ADMIN_BOOTSTRAP_TOKEN=tu_token_bootstrap_para_crear_primer_admin

# ========== GOOGLE GEMINI AI ==========
# Obten tu API key en: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=tu_api_key_de_gemini_aqui
VITE_GEMINI_API_KEY=tu_api_key_de_gemini_aqui
GOOGLE_AI_API_KEY=tu_api_key_de_gemini_aqui

# ========== GOOGLE GMAIL OAUTH2 ==========
# Configuracion para envio de correos (opcional)
# Obten las credenciales en: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui
GOOGLE_REDIRECT_URI=http://localhost:1002/api/admin/gmail/oauth2/callback

# ========== CORS ==========
ALLOW_ALL_CORS=false

# ========== ZONA HORARIA ==========
TZ=America/Mexico_City

# ========== JOBS AUTOMATICOS ==========
# Cron expression para ejecutar plantillas automaticas (formato: minuto hora dia mes dia_semana)
# Ejemplo: '5 5 * * *' = todos los dias a las 05:05
PLANTILLAS_CRON=5 5 * * *
