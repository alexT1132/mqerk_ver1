# ================================================
# CONFIGURACIÓN DEL SERVIDOR MQERK ACADEMY
# ================================================

# --- BASE DE DATOS ---
DB_HOST=YOUR_VALUE_HERE
DB_USER=YOUR_VALUE_HERE
DB_PASSWORD=YOUR_VALUE_HERE
DB_NAME=YOUR_VALUE_HERE
DB_PORT=YOUR_VALUE_HERE

# --- SEGURIDAD Y AUTENTICACIÓN ---
# Secreto para firmar los tokens JWT
# JWT
JWT_SECRET=YOUR_VALUE_HERE

# --- SERVIDOR ---
PORT=YOUR_VALUE_HERE
# Host (opcional, para producción usar 0.0.0.0)
# HOST=0.0.0.0

# --- CORS ---
# true en desarrollo para permitir peticiones desde localhost, false en producción
ALLOW_ALL_CORS=YOUR_VALUE_HERE


# Limite maximo de preguntas generadas por IA
AI_MAX_QUESTIONS=YOUR_VALUE_HERE


# ================================================
# CONFIGURACIÓN DE INTELIGENCIA ARTIFICIAL (GEMINI)
# Sistema de rotación de claves para evitar límites de cuota
# ================================================

# Para QUIZZES
GEMINI_API_KEY_QUIZZES_1=YOUR_VALUE_HERE
GEMINI_API_KEY_QUIZZES_2=YOUR_VALUE_HERE
GEMINI_API_KEY_QUIZZES_3=YOUR_VALUE_HERE
GEMINI_QUIZZES_MODEL=YOUR_VALUE_HERE
GEMINI_QUIZZES_API_VERSION=YOUR_VALUE_HERE

# Para SIMULADORES
GEMINI_API_KEY_SIMULADORES_1=YOUR_VALUE_HERE
GEMINI_API_KEY_SIMULADORES_2=YOUR_VALUE_HERE
GEMINI_API_KEY_SIMULADORES_3=YOUR_VALUE_HERE
GEMINI_SIMULADORES_MODEL=YOUR_VALUE_HERE
GEMINI_SIMULADORES_API_VERSION=YOUR_VALUE_HERE

# Para ANALISIS
GEMINI_API_KEY_ANALISIS_1=YOUR_VALUE_HERE
GEMINI_API_KEY_ANALISIS_2=YOUR_VALUE_HERE
GEMINI_API_KEY_ANALISIS_3=YOUR_VALUE_HERE
GEMINI_ANALISIS_MODEL=YOUR_VALUE_HERE
GEMINI_ANALISIS_API_VERSION=YOUR_VALUE_HERE

# Configuracion general de Gemini (fallback)
GEMINI_API_KEY=YOUR_VALUE_HERE
GEMINI_MODEL=YOUR_VALUE_HERE
GEMINI_API_VERSION=YOUR_VALUE_HERE

# Limites de IA
VITE_AI_MAX_QUESTIONS=YOUR_VALUE_HERE
VITE_IA_COOLDOWN_MS=YOUR_VALUE_HERE
VITE_IA_COOLDOWN_429_MS=YOUR_VALUE_HERE

# Para FoRMULAS (generacion de formulas matematicas)
GEMINI_API_KEY_FORMULAS_1=YOUR_VALUE_HERE
GEMINI_API_KEY_FORMULAS_2=YOUR_VALUE_HERE
GEMINI_API_KEY_FORMULAS_3=YOUR_VALUE_HERE

# Para CALIFICACIoN (validacion de respuestas cortas)
GEMINI_API_KEY_CALIFICACION_1=YOUR_VALUE_HERE
GEMINI_API_KEY_CALIFICACION_2=YOUR_VALUE_HERE
GEMINI_API_KEY_CALIFICACION_3=YOUR_VALUE_HERE
GEMINI_CALIFICACION_MODEL=YOUR_VALUE_HERE

GROQ_API_KEY=YOUR_VALUE_HERE
GROQ_API_KEY_QUIZZES_1=YOUR_VALUE_HERE
GROQ_API_KEY_ANALISIS_1=YOUR_VALUE_HERE

# Configuración de IA para análisis de quizzes
# Si está en 'true', usa solo Groq (llama 3.3 70B) y salta Gemini
VITE_USE_GROQ_FOR_ANALYSIS=YOUR_VALUE_HERE
